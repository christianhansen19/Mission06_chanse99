@{
    ViewData["Title"] = "Delete Movie";
}

@model MovieResponse

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for @Model.MovieTitle?</h3>
<br />

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="MovieCollectionList" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="MovieId" />
</form>